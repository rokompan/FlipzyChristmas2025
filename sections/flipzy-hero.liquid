{% schema %}
{
  "name": "Flipzy Hero Slider",
  "class": "flipzy-section",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "video",
          "id": "video_file",
          "label": "Video (MP4)",
          "info": "Auto-plays on loop. Darkens by 30% automatically."
        },
        {
          "type": "image_picker",
          "id": "image_fallback",
          "label": "Image Fallback"
        },
        {
          "type": "header",
          "content": "Text Content"
        },
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading",
          "default": "<p>Flipzy - <strong>Wooden Planner</strong> That Makes Tasks Fun</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Go to Shop"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flipzy Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}

<div class="flipzy-hero-container" id="FlipzyHero-{{ section.id }}">
  
  <button class="flipzy-nav-btn flipzy-prev" onclick="scrollHero{{ section.id | replace: '-', '' }}(-1)" aria-label="Previous Slide">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
  </button>
  <button class="flipzy-nav-btn flipzy-next" onclick="scrollHero{{ section.id | replace: '-', '' }}(1)" aria-label="Next Slide">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
  </button>

  <div class="flipzy-slider-track" id="FlipzyHeroTrack-{{ section.id }}">
    {% for block in section.blocks %}
      <div class="flipzy-slide" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        <div class="flipzy-media-wrapper">
          {% if block.settings.video_file != blank %}
            {{ block.settings.video_file | video_tag: 
              autoplay: true, 
              loop: true, 
              muted: true, 
              playsinline: true, 
              controls: false, 
              class: 'hero-video' 
            }}
          {% elsif block.settings.image_fallback != blank %}
            {{ block.settings.image_fallback | image_url: width: 1800 | image_tag: loading: 'eager' }}
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag }}
          {% endif %}
        </div>

        <div class="flipzy-content-wrapper">
          <div class="flipzy-text-box">
            {% if block.settings.heading != blank %}
              <div class="flipzy-heading">
                {{ block.settings.heading }}
              </div>
            {% endif %}

            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" class="flipzy-btn">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>

      </div>
    {% endfor %}
  </div>

  <div class="flipzy-dots-container" id="FlipzyDots-{{ section.id }}"></div>

  <div class="flipzy-scroll-cue">See how it works â†“</div>
</div>

<script>
  (function() {
    // Wrap in closure to avoid global variable conflicts
    const sectionId = "{{ section.id }}";
    const trackId = "FlipzyHeroTrack-" + sectionId;
    const dotsId = "FlipzyDots-" + sectionId;

    function initSlider() {
      const track = document.getElementById(trackId);
      const dotsContainer = document.getElementById(dotsId);
      
      if (!track || !dotsContainer) return;

      // Clear existing dots
      dotsContainer.innerHTML = '';
      
      // Select slides securely
      const slides = track.querySelectorAll('.flipzy-slide');
      
      if (slides.length === 0) return;

      // 1. Generate Dots
      slides.forEach((slide, index) => {
        const dot = document.createElement('div');
        dot.classList.add('flipzy-dot');
        if (index === 0) dot.classList.add('active');
        
        dot.addEventListener('click', () => {
          const slideWidth = track.offsetWidth;
          track.scrollTo({ left: slideWidth * index, behavior: 'smooth' });
        });
        
        dotsContainer.appendChild(dot);
      });

      const dots = dotsContainer.querySelectorAll('.flipzy-dot');

      // 2. Observer
      const observerOptions = { root: track, threshold: 0.5 };
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const index = entry.target.getAttribute('data-index');
            dots.forEach(d => d.classList.remove('active'));
            if(dots[index]) dots[index].classList.add('active');
          }
        });
      }, observerOptions);

      slides.forEach(slide => observer.observe(slide));

      // 3. Teaser Animation
      setTimeout(() => { track.classList.add('flipzy-track-tease'); }, 1000);

      const killTeaser = () => { track.classList.remove('flipzy-track-tease'); };
      track.addEventListener('touchstart', killTeaser, {passive: true});
      track.addEventListener('mousedown', killTeaser);
      track.addEventListener('scroll', () => {
          if(Math.abs(track.scrollLeft) > 10) killTeaser();
      });
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', initSlider);
    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail.sectionId === sectionId) initSlider();
    });
    
    // Immediate run in case DOM is ready
    initSlider();
    
    // Global Scroll Function (Unique per section)
    window['scrollHero' + sectionId.replace(/-/g, '')] = function(direction) {
      const track = document.getElementById(trackId);
      if(!track) return;
      
      track.classList.remove('flipzy-track-tease');
      
      const slideWidth = track.offsetWidth;
      const currentScroll = track.scrollLeft;
      const maxScroll = track.scrollWidth - slideWidth;
      const isAtEnd = currentScroll >= maxScroll - 10;
      const isAtStart = currentScroll <= 10;

      if (direction === 1 && isAtEnd) {
        track.scrollTo({ left: 0, behavior: 'smooth' });
      } else if (direction === -1 && isAtStart) {
        track.scrollTo({ left: maxScroll, behavior: 'smooth' });
      } else {
        track.scrollBy({ left: direction * slideWidth, behavior: 'smooth' });
      }
    };
  })();
</script>