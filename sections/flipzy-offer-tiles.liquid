{%- liquid
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign product = section.settings.product
-%}

{{ 'component-rating.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: #f8fafc;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
    }
  }

  .flipzy-offer-container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  /* --- DESKTOP LAYOUT --- */
  @media screen and (min-width: 990px) {
    .flipzy-offer-container {
      flex-direction: row;
      align-items: flex-start;
      gap: 50px;
    }
    
    .flipzy-offer-media {
      flex: 1;
      width: 50%;
    }

    .flipzy-offer-content {
      flex: 1;
      width: 50%;
      position: sticky;
      top: 20px;
    }
  }

  /* --- MEDIA SIDE --- */
  .flipzy-offer-media {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    background: #fff;
  }
  
  .flipzy-offer-media img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  /* --- CONTENT SIDE --- */
  .flipzy-offer-content {
    background: #fff;
    padding: 25px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
  }

  .flipzy-offer-title {
    font-size: 1.8rem;
    font-weight: 800;
    margin: 0 0 10px 0;
    line-height: 1.2;
    color: #111;
  }
  
  .flipzy-offer-desc {
    font-size: 1rem;
    color: #4b5563;
    margin-bottom: 20px;
    line-height: 1.5;
  }

  /* --- QUANTITY SELECTOR --- */
  .flipzy-qty-label {
    font-size: 0.95rem;
    font-weight: 700;
    margin-bottom: 10px;
    display: block;
    color: #111;
  }

  .flipzy-qty-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 1x, 2x, 3x on first row? Or all 4? */
    /* Let's do 2x2 on mobile, 4x1 on desktop or just 4x1 flex wrap? */
    gap: 10px;
    margin-bottom: 25px;
  }

  .flipzy-qty-btn {
    border: 2px solid #e5e7eb;
    background: #fff;
    border-radius: 12px;
    padding: 12px 5px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    position: relative;
    min-height: 80px;
  }

  .flipzy-qty-btn:hover {
    border-color: #d1d5db;
    background: #f9fafb;
  }

  .flipzy-qty-btn.is-selected {
    border-color: #F4D35E;
    background: #FFFBEB;
    box-shadow: 0 4px 12px rgba(244, 211, 94, 0.2);
  }

  .mt-qty-big {
    font-size: 1.4rem;
    font-weight: 800;
    color: #111;
    line-height: 1;
    margin-bottom: 4px;
  }

  .mt-qty-small {
    font-size: 0.8rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
  }
  
  /* Badges on Buttons */
  .flipzy-btn-badge {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    background: #EF4444;
    color: white;
    font-size: 0.65rem;
    padding: 2px 8px;
    border-radius: 10px;
    font-weight: 700;
    white-space: nowrap;
    opacity: 0; 
    transition: opacity 0.2s;
  }
  
  .flipzy-qty-btn[data-badge="true"] .flipzy-btn-badge {
    opacity: 1;
  }

  /* --- PRICE SUMMARY --- */
  .flipzy-summary-box {
    background: #f8fafc;
    border-radius: 12px;
    padding: 15px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .flipzy-summary-text {
    font-weight: 600;
    color: #374151;
  }
  
  .flipzy-summary-price {
    font-size: 1.5rem;
    font-weight: 800;
    color: #111;
  }

  .flipzy-shipping-text {
     font-size: 0.8rem;
     color: #059669;
     font-weight: 700;
     display: block;
     text-align: right;
  }

  /* --- MAIN BUTTON --- */
  .flipzy-add-btn {
    width: 100%;
    background-color: #F4D35E;
    color: #111827;
    border: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.2rem;
    padding: 16px;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(244, 211, 94, 0.4);
    transition: transform 0.2s;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .flipzy-add-btn:hover {
    transform: scale(1.02);
  }

  /* --- MOBILE TWEAKS --- */
  @media (max-width: 768px) {
    .flipzy-qty-grid {
       grid-template-columns: repeat(4, 1fr); /* 4 across on mobile for small buttons */
    }
    .mt-qty-big { font-size: 1.2rem; }
    .mt-qty-small { font-size: 0.7rem; }
    .flipzy-qty-btn { min-height: 70px; padding: 10px 2px; }
  }
{%- endstyle -%}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="section-{{ section.id }}-padding" id="flipzy-offer-section">
  <div class="page-width">
    
    {% if product != blank %}
      {% assign variant = product.selected_or_first_available_variant %}
      
      <div class="flipzy-offer-container">
        <!-- LEFT: MEDIA -->
        <div class="flipzy-offer-media">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 800 }}" 
              alt="{{ product.title }}"
              loading="lazy"
              width="{{ product.featured_image.width }}" 
              height="{{ product.featured_image.height }}"
            >
          {% else %}
             {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>

        <!-- RIGHT: CONFIG -->
        <div class="flipzy-offer-content">
          <h2 class="flipzy-offer-title">{{ section.settings.title | default: product.title }}</h2>
          <div class="flipzy-offer-desc">{{ section.settings.text }}</div>

          <span class="flipzy-qty-label">Choose Quantity:</span>
          
          <div class="flipzy-qty-grid">
            <!-- 1x -->
            <div class="flipzy-qty-btn is-selected" onclick="selectOfferQty(1, this)">
              <span class="mt-qty-big">1x</span>
              <span class="mt-qty-small">Pair</span>
            </div>

            <!-- 2x -->
            <div class="flipzy-qty-btn" onclick="selectOfferQty(2, this)" data-badge="true">
              <span class="flipzy-btn-badge">FREE SHIP</span>
              <span class="mt-qty-big">2x</span>
              <span class="mt-qty-small">Pairs</span>
            </div>

            <!-- 3x -->
            <div class="flipzy-qty-btn" onclick="selectOfferQty(3, this)" data-badge="true">
              <span class="flipzy-btn-badge">3 FOR 2</span>
              <span class="mt-qty-big">3x</span>
              <span class="mt-qty-small">Pairs</span>
            </div>

            <!-- 4x -->
            <div class="flipzy-qty-btn" onclick="selectOfferQty(4, this)" data-badge="true">
               <span class="flipzy-btn-badge">-30% OFF</span>
               <span class="mt-qty-big">4x</span>
               <span class="mt-qty-small">Pairs</span>
            </div>
          </div>

          <div class="flipzy-summary-box">
             <div>
                <div class="flipzy-summary-text">Total Price:</div>
             </div>
             <div>
                <div class="flipzy-summary-price" id="offer-total-price" data-base="{{ variant.price }}">{{ variant.price | money }}</div>
                <div class="flipzy-shipping-text" id="offer-shipping-text" style="display:none;">+ Free Shipping</div>
             </div>
          </div>

          <!-- HIDDEN PRODUCT FORM -->
          <product-form class="product-form">
            {%- form 'product', product, id: 'main-offer-form', class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
              <input type="hidden" name="id" value="{{ variant.id }}">
              <input type="hidden" name="quantity" id="main-offer-quantity" value="1">
              
              <button
                type="submit"
                name="add"
                class="flipzy-add-btn"
                {% unless variant.available %}disabled{% endunless %}
              >
                <span>
                  {% if variant.available %}
                    Add to Cart
                  {% else %}
                    Sold Out
                  {% endif %}
                </span>
              </button>
            {%- endform -%}
          </product-form>

        </div>
      </div>

    {% else %}
       <p style="text-align:center; padding: 50px;">Please select a product in the section settings.</p>
    {% endif %}

  </div>
</div>

<script>
  let currentOfferQty = 1;
  const moneyFormat = "{{ shop.money_format }}"; // e.g. €{{amount}}

  function formatMoney(cents) {
    return moneyFormat.replace('\{\{amount\}\}', (cents / 100).toFixed(2)).replace('\{\{amount_no_decimals\}\}', (cents / 100).toFixed(0)); 
  }

  function selectOfferQty(qty, btn) {
    // 1. Visual Selection
    document.querySelectorAll('.flipzy-qty-btn').forEach(el => el.classList.remove('is-selected'));
    btn.classList.add('is-selected');

    // 2. Update State
    currentOfferQty = qty;
    document.getElementById('main-offer-quantity').value = qty;

    // 3. Price Calculation Logic
    // Based on user request/sticky bar logic:
    // 1x: Base
    // 2x: 2 * Base (Free Shipping)
    // 3x: 2 * Base (3 for 2)
    // 4x: 4 * Base * 0.70 (30% off)

    const priceEl = document.getElementById('offer-total-price');
    const basePrice = parseFloat(priceEl.getAttribute('data-base'));
    
    let finalPrice = basePrice * qty; // Default

    if (qty == 3) {
       // 3 for 2 deal: Pay for 2
       finalPrice = basePrice * 2;
    } else if (qty == 4) {
       // 30% off total
       finalPrice = (basePrice * 4) * 0.70;
    }

    // Update Price Text
    // Note: Simple JS formatter might not match Shopify's complex filters perfectly, but good enough for dynamic update
    // If shop currency has weird formatting, might need refinement.
    // For EUR/USD usually fine.
    priceEl.innerText = formatMoney(finalPrice); 

    // 4. Shipping Text
    const shipEl = document.getElementById('offer-shipping-text');
    if (qty >= 2) {
        shipEl.style.display = 'block';
    } else {
        shipEl.style.display = 'none';
    }
  }
</script>

{% schema %}
{
  "name": "Flipzy Offer Redesign",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Main Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Mehki in Udobni Natikači"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Sproščanje za vaša stopala.</p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Flipzy Offer Redesign"
    }
  ]
}
{% endschema %}