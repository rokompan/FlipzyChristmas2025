{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: #f8fafc;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
    }
  }

  .flipzy-offer-container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  /* --- DESKTOP LAYOUT --- */
  @media screen and (min-width: 990px) {
    .flipzy-offer-container {
      flex-direction: row;
      align-items: flex-start;
      gap: 50px;
    }
    
    .flipzy-offer-media {
      flex: 1;
      width: 50%;
    }

    .flipzy-offer-content {
      flex: 1;
      width: 50%;
      position: sticky;
      top: 20px;
    }
  }

  /* --- MEDIA SIDE --- */
  .flipzy-offer-media {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    background: #fff;
  }
  
  .flipzy-offer-media img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  /* --- CONTENT SIDE --- */
  .flipzy-offer-content {
    background: #fff;
    padding: 25px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
  }

  .flipzy-offer-title {
    font-size: 1.8rem;
    font-weight: 800;
    margin: 0 0 10px 0;
    line-height: 1.2;
    color: #111;
  }
  
  .flipzy-offer-desc {
    font-size: 1rem;
    color: #4b5563;
    margin-bottom: 20px;
    line-height: 1.5;
  }

  /* --- QUANTITY SELECTOR --- */
  .flipzy-qty-label {
    font-size: 0.95rem;
    font-weight: 700;
    margin-bottom: 10px;
    display: block;
    color: #111;
  }

  .flipzy-qty-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* All 4 in one line as requested */
    /* Let's do 2x2 on mobile, 4x1 on desktop or just 4x1 flex wrap? */
    gap: 10px;
    margin-bottom: 25px;
  }

  .flipzy-qty-btn {
    border: 2px solid #e5e7eb;
    background: #fff;
    border-radius: 12px;
    padding: 12px 5px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    position: relative;
    min-height: 80px;
  }

  .flipzy-qty-btn:hover {
    border-color: #d1d5db;
    background: #f9fafb;
  }

  .flipzy-qty-btn.is-selected {
    border-color: #F4D35E;
    background: #FFFBEB;
    box-shadow: 0 4px 12px rgba(244, 211, 94, 0.2);
  }

  .mt-qty-big {
    font-size: 1.8rem;
    font-weight: 800;
    color: #111;
    line-height: 1;
    margin-bottom: 4px;
  }

  .mt-qty-small {
    font-size: 1rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
  }
  
  /* Badges on Buttons */
  .flipzy-btn-badge {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    background: #EF4444;
    color: white;
    font-size: 0.65rem;
    padding: 2px 8px;
    border-radius: 10px;
    font-weight: 700;
    white-space: nowrap;
    opacity: 0; 
    transition: opacity 0.2s;
  }
  
  .flipzy-qty-btn[data-badge="true"] .flipzy-btn-badge {
    opacity: 1;
  }

  /* --- PRICE SUMMARY --- */
  .flipzy-summary-box {
    background: #f8fafc;
    border-radius: 12px;
    padding: 15px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .flipzy-summary-text {
    font-weight: 600;
    color: #374151;
  }
  
  .flipzy-summary-price {
    font-size: 1.5rem;
    font-weight: 800;
    color: #111;
  }

  .flipzy-shipping-text {
     font-size: 0.8rem;
     color: #059669;
     font-weight: 700;
     display: block;
     text-align: right;
  }

  /* --- MAIN BUTTON --- */
  .flipzy-add-btn {
    width: 100%;
    background-color: #F4D35E;
    color: #111827;
    border: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.2rem;
    padding: 16px;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(244, 211, 94, 0.4);
    transition: transform 0.2s;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .flipzy-add-btn:hover {
    transform: scale(1.02);
  }

  /* --- MOBILE TWEAKS --- */
  @media (max-width: 768px) {
    .flipzy-qty-grid {
       grid-template-columns: repeat(4, 1fr); /* 4 across on mobile for small buttons */
    }
    .mt-qty-big { font-size: 1.5rem; }
    .mt-qty-small { font-size: 0.85rem; }
    .flipzy-qty-btn { min-height: 70px; padding: 10px 2px; }
  }
{%- endstyle -%}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="section-{{ section.id }}-padding" id="flipzy-offer-section">
  <div class="page-width">
    
    {% if product != blank %}
      {% assign variant = product.selected_or_first_available_variant %}
      
      <div class="flipzy-offer-container">
        <!-- LEFT: MEDIA -->
        <div class="flipzy-offer-media">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 800 }}" 
              alt="{{ product.title }}"
              loading="lazy"
              width="{{ product.featured_image.width }}" 
              height="{{ product.featured_image.height }}"
            >
          {% else %}
             {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>

        <!-- RIGHT: CONFIG -->
        <div class="flipzy-offer-content">
          <h2 class="flipzy-offer-title">{{ section.settings.title | default: product.title }}</h2>
          <div class="flipzy-offer-desc">{{ section.settings.text }}</div>

          <span class="flipzy-qty-label">Choose Quantity:</span>
          
          <div class="flipzy-qty-grid">
            <!-- 1x -->
            <div class="flipzy-qty-btn is-selected" onclick="selectOfferQty(1, this)">
              <span class="mt-qty-big">1x</span>
              <span class="mt-qty-small">Flipzy</span>
            </div>

            <!-- 2x -->
            <div class="flipzy-qty-btn" onclick="selectOfferQty(2, this)" data-badge="true">
              <span class="flipzy-btn-badge">FREE SHIP</span>
              <span class="mt-qty-big">2x</span>
              <span class="mt-qty-small">Flipzys</span>
            </div>

            <!-- 3x -->
            <div class="flipzy-qty-btn" onclick="selectOfferQty(3, this)" data-badge="true">
              <span class="flipzy-btn-badge">3 FOR 2</span>
              <span class="mt-qty-big">3x</span>
              <span class="mt-qty-small">Flipzys</span>
            </div>

            <!-- 4x -->
            <div class="flipzy-qty-btn" onclick="selectOfferQty(4, this)" data-badge="true">
               <span class="flipzy-btn-badge">-30% OFF</span>
               <span class="mt-qty-big">4x</span>
               <span class="mt-qty-small">Flipzys</span>
            </div>
          </div>

          <div class="flipzy-summary-box">
             <div>
                <div class="flipzy-summary-text">Total Price:</div>
             </div>
             <div>
                <div class="flipzy-summary-price" id="offer-total-price" data-base="{{ variant.price }}">{{ variant.price | money }}</div>
                <div class="flipzy-shipping-text" id="offer-shipping-text" style="display:none;">+ Free Shipping</div>
             </div>
          </div>

          <!-- VISIBLE BUTTON (Triggers hidden form) -->
          <button
            type="button"
            class="flipzy-add-btn"
            onclick="submitOfferForm()"
            {% unless variant.available %}disabled{% endunless %}
          >
            <span>
              {% if variant.available %}
                Add to Cart
              {% else %}
                Sold Out
              {% endif %}
            </span>
          </button>
          
          <!-- HIDDEN STANDARD FORM -->
          <div style="display:none;">
             {% assign product_form_id = 'product-form-offer-' | append: section.id %}
             <product-info
                id="product-info-{{ section.id }}"
                data-section="{{ section.id }}"
                data-product-id="{{ product.id }}"
                data-update-url="false"
                data-url="{{ product.url }}"
             >
                {%- render 'buy-buttons',
                    product: product,
                    product_form_id: product_form_id,
                    section_id: section.id,
                    show_dynamic_checkout: false
                -%}
             </product-info>
          </div>

        </div>
      </div>

    {% else %}
       <p style="text-align:center; padding: 50px;">Please select a product in the section settings.</p>
    {% endif %}

  </div>
</div>

<script>
  let currentOfferQty = 1;
  // Get raw format. Liquid replaces the curly braces with the shop setting, creating a JS string.
  // Warning: If shop format has double quotes, it might break. Should ideally be json encoded.
  // Get shop currency format. 
  // We use specific liquid filters to get raw patterns if possible, or fallback to the standard one.
  const moneyFormat = {{ shop.money_with_currency_format | json }}; 

  function formatMoney(cents) {
    if (!moneyFormat) return (cents / 100).toFixed(2) + ' â‚¬';

    let value = (cents / 100).toFixed(2);
    let valueWithComma = value.replace('.', ',');
    let formatted = moneyFormat;

    // Robust replacement:
    if (formatted.includes('{{amount_with_comma_separator}}')) {
        formatted = formatted.replace('{{amount_with_comma_separator}}', valueWithComma);
    } else if (formatted.includes('{{amount}}')) {
        formatted = formatted.replace('{{amount}}', value);
    } else {
        // Fallback: simple replace if the braces are somehow stripped or different
        // This regex tries to find the standard Shopify money placeholders
        formatted = formatted.replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, valueWithComma)
                             .replace(/\{\{\s*amount\s*\}\}/g, value);
    }
    
    // Safety check: if replacement didn't happen (still contains curly braces), fallback
    if (formatted.includes('{{')) {
         return value + ' ' + '{{ cart.currency.iso_code }}';
    }

    return formatted;
  }

  function selectOfferQty(qty, element) {
    // 1. Update UI Selection
    currentOfferQty = qty;
    document.querySelectorAll('.flipzy-qty-btn').forEach(btn => btn.classList.remove('is-selected'));
    element.classList.add('is-selected');

    // 2. Calculate Dynamic Price using Config
    let finalPrice = 0;
    const basePrice = window.offerConfig.basePrice;
    
    // Use Schema Settings (Percent Discount)
    const tier = window.offerConfig.tiers[qty] || { discount: 0 };
    const discountPct = tier.discount;
    
    const baseTotal = basePrice * qty;
    finalPrice = baseTotal * (1 - (discountPct / 100));

    // 3. Format Money
    const priceEl = document.getElementById('offer-total-price');
    priceEl.innerText = formatMoney(finalPrice);
    
    // 4. Shipping Text
    const shipEl = document.getElementById('offer-shipping-text');
    if (qty >= 2) {
        shipEl.style.display = 'block';
    } else {
        shipEl.style.display = 'none';
    }
  }

  function submitOfferForm() {
      // Find the hidden form rendered by buy-buttons
      // The ID is constructed as 'product-form-offer-' + section.id
      const formId = 'product-form-offer-{{ section.id }}';
      const form = document.getElementById(formId);
      
      if (form) {
          // Check for quantity input
          let qtyInput = form.querySelector('input[name="quantity"]');
          if (!qtyInput) {
              qtyInput = document.createElement('input');
              qtyInput.type = 'hidden';
              qtyInput.name = 'quantity';
              form.appendChild(qtyInput);
          }
          // Set value from global state
          qtyInput.value = currentOfferQty;
          
          // Submit
          form.dispatchEvent(new Event('submit', { bubbles: true, cancelable: true }));
      } else {
          console.error('Flipzy Offer: Hidden, rendered form not found:', formId);
      }
  }
</script>

<script>
  window.offerConfig = {
    basePrice: {{ current_variant.price | json }},
    moneyFormat: {{ shop.money_with_currency_format | json }},
    tiers: {
      1: { discount: 0, label: {{ section.settings.qty_1_label | json }} },
      2: { discount: {{ section.settings.qty_2_discount | default: 7 }}, label: {{ section.settings.qty_2_label | json }} },
      3: { discount: {{ section.settings.qty_3_discount | default: 20 }}, label: {{ section.settings.qty_3_label | json }} },
      4: { discount: {{ section.settings.qty_4_discount | default: 25 }}, label: {{ section.settings.qty_4_label | json }} }
    }
  };
</script>

