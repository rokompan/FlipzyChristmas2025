{% comment %}
  Flipzy Testimonials Section
  Uses styles defined in flipzy-custom.css
{% endcomment %}

<div class="flipzy-section flipzy-testimonials-section scheme-{{ section.settings.color_scheme }}">
  <div class="flipzy-testimonials-container">
    
    <div class="flipzy-testimonials-header">
      <h2 class="flipzy-testimonials-title">{{ section.settings.heading | escape }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="flipzy-testimonials-sub">{{ section.settings.subheading | escape }}</p>
      {% endif %}
    </div>

    <div class="flipzy-testimonials-grid">
      {%- for block in section.blocks -%}
        <div class="flipzy-testimonial-card" {{ block.shopify_attributes }}>
          
          {% assign rating = 5 %}
          {% if block.settings.author contains 'Martina' %}
            {% assign rating = 4 %}
          {% endif %}
          
          <div class="flipzy-stars" style="color: #F4D35E; margin-bottom: 10px;">
            {%- for i in (1..5) -%}
              <svg viewBox="0 0 24 24" aria-hidden="true" style="width:18px;height:18px;fill:{% if i <= rating %}currentColor{% else %}#E5E7EB{% endif %};">
                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path>
              </svg>
            {%- endfor -%}
          </div>

          {% assign testimonial_img = block.settings.image %}
          
          {%- comment -%} Fallback for specific requested testimonials if image picker fails or is empty {%- endcomment -%}
          {% if testimonial_img == blank %}
              {% if block.settings.author contains 'Lucia' %}
                  {% assign fallback_src = 'https://cdn.shopify.com/s/files/1/0961/4082/0821/files/happy-flipped.jpg?v=1770320653' %}
              {% elsif block.settings.author contains 'Eva' %}
                  {% assign fallback_src = 'https://cdn.shopify.com/s/files/1/0961/4082/0821/files/happy-stickers.jpg?v=1770320836' %}
              {% elsif block.settings.author contains 'Jana' %}
                  {% assign fallback_src = 'https://cdn.shopify.com/s/files/1/0961/4082/0821/files/happy-random.jpg?v=1770321344' %}
              {% elsif block.settings.author contains 'Martina' %}
                  {% assign fallback_src = 'https://cdn.shopify.com/s/files/1/0961/4082/0821/files/happy-family2.png?v=1770322109' %}
              {% elsif block.settings.author contains 'Helena' %}
                  {% assign fallback_src = 'https://cdn.shopify.com/s/files/1/0961/4082/0821/files/hf_20260205_200746_1a2f31ab-24c2-41d2-8649-1970ae8d2f1f.png?v=1770322213' %}
              {% endif %}
          {% endif %}

          {% if testimonial_img != blank or fallback_src != blank %}
             {% assign img_src = testimonial_img %}
             {% if img_src == blank %}{% assign img_src = fallback_src %}{% endif %}
             
             <!-- Magazine Style 'Prelom': Floated Image -->
             <div class="flipzy-testimonial-img" style="float: left; margin-right: 15px; margin-bottom: 5px; width: 90px; height: 90px; flex-shrink: 0;">
                 <img src="{{ img_src | image_url: width: 200 }}" 
                      alt="Happy customer" 
                      loading="lazy" 
                      width="90" 
                      height="90"
                      style="width:100%; height:100%; object-fit:cover; border-radius:12px; display:block;"
                 >
             </div>
          {% endif %}

          <div class="flipzy-review-text" style="overflow: hidden; /* clears float context if needed, but we want wrap */">
            {{ block.settings.text }}
          </div>
          
          <div style="clear:both;"></div> <!-- Ensure footer sits below -->

          <div class="flipzy-review-footer">
            <span class="flipzy-author-name">{{ block.settings.author }}</span>
            {% if block.settings.show_badge %}
              <span class="flipzy-verified-badge">Verified Buyer</span>
            {% endif %}
          </div>

        </div>
      {%- endfor -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Flipzy Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        { "value": "white", "label": "White" },
        { "value": "cream", "label": "Cream" },
        { "value": "sage", "label": "Sage" },
        { "value": "mint", "label": "Mint" },
        { "value": "night", "label": "Night" }
      ],
      "default": "cream"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Join Thousands of Happy Families",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Real stories from parents using Flipzy",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Photo"
        },
        {
          "type": "textarea",
          "id": "text",
          "default": "Review text here...",
          "label": "Review Text"
        },
        {
          "type": "text",
          "id": "author",
          "default": "Author Name",
          "label": "Author Name"
        },
        {
          "type": "checkbox",
          "id": "show_badge",
          "default": true,
          "label": "Show 'Verified Buyer' Badge"
        }
      ]
    }
  ],
  "presets": [
