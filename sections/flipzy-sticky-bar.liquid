{% schema %}
{
  "name": "Flipzy Sticky Bar",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Headline Text",
      "default": "Kids Routine Board That Works"
    },
    {
      "type": "text",
      "id": "subline_text",
      "label": "Subline Text",
      "default": "Special offer available while supplies last"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Add to Cart"
    }
  ],
  "presets": [
    {
      "name": "Flipzy Sticky Bar"
    }
  ]
}
{% endschema %}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign product = section.settings.product
  assign variant = product.selected_or_first_available_variant
  assign compare_price = variant.compare_at_price
  assign price = variant.price
  assign product_form_id = 'product-form-sticky-' | append: section.id
-%}

<div id="flipzy-sticky-bar" class="flipzy-sticky">
  <div class="flipzy-sticky__inner">
    
    <div class="flipzy-sticky__info">
      <p class="flipzy-sticky__title">
        {% if section.settings.text != blank %}
          {{ section.settings.text }}
        {% else %}
          {{ product.title }}
        {% endif %}
      </p>
      
      <div class="flipzy-sticky__sub">
        <div class="flipzy-sticky__price-box">
          {% if compare_price > price %}
            <span class="flipzy-sticky-old">{{ compare_price | money }}</span>
          {% endif %}
          <span class="flipzy-sticky-new">{{ price | money }}</span>
        </div>
        {% if section.settings.subline_text != blank %}
          <span style="opacity: 0.5; margin: 0 5px;">|</span>
          <span>{{ section.settings.subline_text }}</span>
        {% endif %}
      </div>
    </div>

    <div class="flipzy-sticky__cta">
      {% if product != blank %}
        <product-form class="product-form" data-hide-errors="false">
          
          <div class="product-form__error-message-wrapper" role="alert" hidden>
            <svg aria-hidden="true" focusable="false" class="icon icon-error" viewBox="0 0 13 13">
              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
              <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
              <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
            </svg>
            <span class="product-form__error-message"></span>
          </div>

          {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
            <input type="hidden" name="id" value="{{ variant.id }}">
            
            <div class="product-form__buttons">
              <button
                type="submit"
                name="add"
                class="product-form__submit button flipzy-sticky__btn"
                {% if variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if variant.available -%}
                    {{ section.settings.button_label }}
                  {%- else -%}
                    Sold Out
                  {%- endif -%}
                </span>
                
                <div class="loading-overlay__spinner hidden">
                  <svg aria-hidden="true" focusable="false" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                    <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                  </svg>
                </div>
              </button>
            </div>
          {%- endform -%}
        </product-form>
      {% else %}
        <button class="flipzy-sticky__btn" disabled>Select Product</button>
      {% endif %}
    </div>

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const bar = document.getElementById('flipzy-sticky-bar');
  // Isce Hero ali Feature Video sekcijo za trigger tocko
  const triggerSection = document.querySelector('.flipzy-hero-container') || document.querySelector('.flipzy-feature-section');

  function checkScroll() {
    if (!triggerSection) {
       // Fallback ce sekcij ni
       if(window.scrollY > 400) bar.classList.add('is-visible');
       else bar.classList.remove('is-visible');
       return;
    }
    
    const triggerBottom = triggerSection.getBoundingClientRect().bottom;
    
    // Ko spodnji rob heroja zapusti zaslon (gre v minus), prikazi bar
    if (triggerBottom < 0) {
      bar.classList.add('is-visible');
    } else {
      bar.classList.remove('is-visible');
    }
  }

  window.addEventListener('scroll', checkScroll, { passive: true });
  checkScroll(); 
});
</script>