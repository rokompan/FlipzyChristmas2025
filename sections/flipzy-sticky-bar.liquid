{%- liquid
  assign placeholder = false
  if section.blocks.size == 0
    assign placeholder = true
  endif
-%}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  /* --- STICKY BAR CSS --- */
  .flipzy-sticky {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    border-top: 1px solid #e5e7eb;
    box-shadow: 0 -4px 20px rgba(0,0,0,0.08);
    z-index: 999;
    padding: 10px 0;
    transform: translateY(110%);
    transition: transform 0.3s ease-in-out;
    display: block !important;
  }

  .flipzy-sticky.is-visible {
    transform: translateY(0);
  }

  .flipzy-sticky-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 15px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Left Side: Text */
  .flipzy-sticky-info {
    display: flex;
    flex-direction: column;
  }
  .flipzy-sticky-title {
    font-size: 1rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
    color: #111;
  }
  .flipzy-sticky-sub {
    font-size: 0.8rem;
    color: #059669; /* Green */
    font-weight: 600;
  }

  /* Center: Bundle Selector (Pills) */
  .flipzy-bundle-selector {
    display: flex;
    gap: 6px;
    background: #f3f4f6;
    padding: 4px;
    border-radius: 50px;
    overflow-x: auto; /* Safety scroll for tiny screens */
    scrollbar-width: none; /* Hide scrollbar Firefox */
  }
  .flipzy-bundle-selector::-webkit-scrollbar { display: none; } /* Hide scrollbar Chrome */

  .flipzy-bundle-pill {
    cursor: pointer;
    padding: 8px 16px;
    border-radius: 40px;
    display: flex;
    flex-direction: column; /* Stack name and badge */
    align-items: center;
    justify-content: center;
    line-height: 1;
    transition: all 0.2s ease;
    border: 1px solid transparent;
    color: #6b7280;
    min-width: 50px;
    position: relative;
    text-align: center;
  }

  /* Top line: 1x, 2x... */
  .flipzy-bundle-pill .pill-name {
    font-size: 0.95rem;
    font-weight: 700;
  }

  /* Middle line: Badge Text (Best Value) */
  .flipzy-bundle-pill .pill-badge-text {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-top: 2px;
    color: #D97706; /* Default orange-ish */
    white-space: nowrap;
  }

  /* Bottom/Corner: Save % */
  .flipzy-bundle-pill .pill-save {
    font-size: 0.65rem;
    background: #EF4444;
    color: white;
    padding: 2px 5px;
    border-radius: 4px;
    font-weight: 700;
    margin-top: 3px;
  }

  /* Active State */
  .flipzy-bundle-pill.is-active {
    background: #fff;
    color: #000;
    border-color: #e5e7eb;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }
  .flipzy-bundle-pill.is-active .pill-name {
    font-weight: 800;
    font-size: 1rem;
  }

  /* Right Side: Price + Button */
  .flipzy-sticky-action {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .flipzy-sticky-price-box {
    text-align: right;
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 1.1;
  }
  
  .flipzy-sticky-old {
    text-decoration: line-through;
    color: #9ca3af;
    font-size: 0.8rem;
  }
  .flipzy-sticky-new {
    font-weight: 800;
    font-size: 1.1rem;
    color: #111;
  }

  .flipzy-sticky-btn {
    background-color: #F4D35E;
    color: #111827;
    border: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.95rem;
    padding: 10px 20px;
    cursor: pointer;
    white-space: nowrap;
    transition: transform 0.2s;
    box-shadow: 0 4px 10px rgba(244, 211, 94, 0.3);
  }
  .flipzy-sticky-btn:hover {
    transform: scale(1.02);
  }

  /* Mobile Adjustments */
  @media (max-width: 768px) {
    .flipzy-sticky-inner {
      padding: 0 10px;
      gap: 8px;
    }
    
    /* Hide Text on Mobile */
    .flipzy-sticky-info { display: none; }

    /* Compact Pills */
    .flipzy-bundle-pill {
      padding: 6px 12px;
      min-width: 44px;
    }
    
    /* On Mobile: Hide badge text ('Best Value') on UNSELECTED items to save width */
    .flipzy-bundle-pill:not(.is-active) .pill-badge-text {
      display: none;
    }
    .flipzy-bundle-pill:not(.is-active) .pill-save {
      display: none; /* Optional: hide save % on unselected to be super clean */
    }

    .flipzy-sticky-action { gap: 8px; }
    .flipzy-sticky-btn {
      padding: 10px 14px;
      font-size: 0.9rem;
    }
    .flipzy-sticky-new { font-size: 1rem; }
    .flipzy-sticky-old { font-size: 0.75rem; }
  }
{%- endstyle -%}

{% unless placeholder %}
  <div id="flipzy-sticky-bar-{{ section.id }}" class="flipzy-sticky">
    <div class="flipzy-sticky-inner">
      
      <div class="flipzy-sticky-info">
        <p class="flipzy-sticky-title">{{ section.settings.text }}</p>
        {% if section.settings.subline_text != blank %}
          <div class="flipzy-sticky-sub">{{ section.settings.subline_text }}</div>
        {% endif %}
      </div>

      <div class="flipzy-bundle-selector">
        {% for block in section.blocks %}
          {% assign prod = block.settings.product %}
          {% if prod != blank %}
            {% assign variant = prod.selected_or_first_available_variant %}
            
            {% comment %} Calculate Discount {% endcomment %}
            {% assign discount_badge = "" %}
            {% if variant.compare_at_price > variant.price %}
               {% assign saved = variant.compare_at_price | minus: variant.price %}
               {% assign pct = saved | times: 100.0 | divided_by: variant.compare_at_price | round %}
               {% capture discount_badge %}-{{ pct }}%{% endcapture %}
            {% endif %}

            <div 
              class="flipzy-bundle-pill {% if forloop.index == section.settings.default_selected %}is-active{% endif %}"
              data-index="{{ forloop.index }}"
              data-price="{{ variant.price | money }}"
              data-compare="{{ variant.compare_at_price | money }}"
              data-has-compare="{% if variant.compare_at_price > variant.price %}true{% else %}false{% endif %}"
              onclick="selectStickyBundle(this)"
            >
              <span class="pill-name">{{ block.settings.short_name }}</span>
              
              {% if block.settings.badge_text != blank %}
                <span class="pill-badge-text">{{ block.settings.badge_text }}</span>
              {% endif %}

              {% if discount_badge != blank %}
                <span class="pill-save">{{ discount_badge }}</span>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="flipzy-sticky-action">
        
        <div class="flipzy-sticky-price-box">
          <span class="flipzy-sticky-old" id="sticky-price-old"></span>
          <span class="flipzy-sticky-new" id="sticky-price-new"></span>
        </div>

        <button type="button" class="flipzy-sticky-btn" onclick="submitStickyBundle()">
          {{ section.settings.button_label }}
        </button>
      </div>

    </div>
  </div>

  <div style="display:none;">
    {% for block in section.blocks %}
      {% assign prod = block.settings.product %}
      {% if prod != blank %}
        {% assign product_form_id = 'product-form-sticky-' | append: block.id %}
        <product-form class="product-form" data-sticky-index="{{ forloop.index }}">
          {%- form 'product', prod, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
            <input type="hidden" name="id" value="{{ prod.selected_or_first_available_variant.id }}">
            <button type="submit" id="btn-sticky-submit-{{ forloop.index }}">Add</button>
          {%- endform -%}
        </product-form>
      {% endif %}
    {% endfor %}
  </div>

{% endunless %}

<script>
  let currentStickyIndex = {{ section.settings.default_selected | default: 1 }};

  function selectStickyBundle(pill) {
    // 1. Update UI classes
    document.querySelectorAll('.flipzy-bundle-pill').forEach(el => el.classList.remove('is-active'));
    pill.classList.add('is-active');

    // 2. Update Data
    currentStickyIndex = pill.getAttribute('data-index');
    const price = pill.getAttribute('data-price');
    const compare = pill.getAttribute('data-compare');
    const hasCompare = pill.getAttribute('data-has-compare') === 'true';

    // 3. Update Price Display
    document.getElementById('sticky-price-new').innerText = price;
    const oldPriceEl = document.getElementById('sticky-price-old');
    if(hasCompare) {
      oldPriceEl.innerText = compare;
      oldPriceEl.style.display = 'block';
    } else {
      oldPriceEl.style.display = 'none';
    }
  }

  function submitStickyBundle() {
    const btn = document.getElementById('btn-sticky-submit-' + currentStickyIndex);
    if(btn) btn.click();
  }

  document.addEventListener('DOMContentLoaded', function () {
    // Initialize prices based on default selection
    const defaultPill = document.querySelector('.flipzy-bundle-pill[data-index="{{ section.settings.default_selected }}"]');
    if(defaultPill) selectStickyBundle(defaultPill);

    // Scroll Logic
    const bar = document.getElementById('flipzy-sticky-bar-{{ section.id }}');
    const triggerSection = document.querySelector('.flipzy-tiles-grid') || document.querySelector('.product-form');

    function checkScroll() {
      if (!triggerSection) {
         if(window.scrollY > 500) bar.classList.add('is-visible');
         else bar.classList.remove('is-visible');
         return;
      }
      
      const triggerBottom = triggerSection.getBoundingClientRect().bottom;
      if (triggerBottom < 0) { 
        bar.classList.add('is-visible');
      } else {
        bar.classList.remove('is-visible');
      }
    }
    
    window.addEventListener('scroll', checkScroll, { passive: true });
    checkScroll();
  });
</script>

{% schema %}
{
  "name": "Flipzy Sticky Bar",
  "settings": [
    { 
      "type": "text", 
      "id": "text", 
      "label": "Headline (Desktop Only)", 
      "default": "Kids Routine Board" 
    },
    { 
      "type": "text", 
      "id": "subline_text", 
      "label": "Subline (Desktop Only)", 
      "default": "Special Offer Ends Soon" 
    },
    { 
      "type": "text", 
      "id": "button_label", 
      "label": "Button Label", 
      "default": "Add to Cart" 
    },
    {
      "type": "range",
      "id": "default_selected",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Default Selected Option",
      "default": 2,
      "info": "Which block index is selected by default? Set to 2 or 3 to boost AOV."
    }
  ],
  "blocks": [
    {
      "type": "bundle",
      "name": "Bundle Option",
      "limit": 4,
      "settings": [
        { "type": "product", "id": "product", "label": "Product Bundle" },
        { "type": "text", "id": "short_name", "label": "Short Label", "default": "1x", "info": "e.g. '1x' or '2 Pack'" },
        { "type": "text", "id": "badge_text", "label": "Badge Label", "default": "Best Value", "info": "e.g. '3 for 2' or 'Most Popular'. Short text works best." }
      ]
    }
  ],
  "presets": [ 
    { 
      "name": "Flipzy Sticky Bar",
      "blocks": [
        { "type": "bundle", "settings": { "short_name": "1x", "badge_text": "Single" } },
        { "type": "bundle", "settings": { "short_name": "2x", "badge_text": "Most Popular" } },
        { "type": "bundle", "settings": { "short_name": "3x", "badge_text": "3 for 2" } }
      ]
    } 
  ]
}
{% endschema %}