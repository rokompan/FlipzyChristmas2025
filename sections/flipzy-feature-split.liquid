{% schema %}
{
  "name": "Flipzy Feature Split",
  "class": "flipzy-section",
  "settings": [
    {
      "type": "header",
      "content": "Look & Feel"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        { "value": "scheme-white", "label": "White Background" },
        { "value": "scheme-cream", "label": "Cream (Warm)" },
        { "value": "scheme-sage", "label": "Sage (Green)" },
        { "value": "scheme-dark", "label": "Dark" }
      ],
      "default": "scheme-white"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "Desktop Layout",
      "options": [
        { "value": "media_right", "label": "Text Left / Media Right" },
        { "value": "media_left", "label": "Media Left / Text Right" }
      ],
      "default": "media_right"
    },
    {
      "type": "checkbox",
      "id": "mobile_text_first",
      "label": "Mobile: Show Text First?",
      "default": true
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What is Flipzy?"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "Video (MP4)"
    },
    {
      "type": "image_picker",
      "id": "image_file",
      "label": "Image (Fallback)"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Point",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "bulb", "label": "Lightbulb (Idea)" },
            { "value": "puzzle", "label": "Puzzle Piece" },
            { "value": "cycle", "label": "Cycle/Refresh" },
            { "value": "wrench", "label": "Wrench/Tools" },
            { "value": "star", "label": "Star" },
            { "value": "check", "label": "Checkmark" }
          ],
          "default": "check"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>A wooden board that helps kids follow daily routines.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flipzy Feature Split",
      "blocks": [
        { "type": "feature_item", "settings": { "icon": "bulb", "text": "<p>A wooden board that helps kids follow daily routines.</p>" }},
        { "type": "feature_item", "settings": { "icon": "puzzle", "text": "<p>7 customizable wooden pieces</p>" }},
        { "type": "feature_item", "settings": { "icon": "cycle", "text": "<p>Simple flip action to mark tasks as complete</p>" }},
        { "type": "feature_item", "settings": { "icon": "wrench", "text": "<p>Easy to mount anywhere</p>" }}
      ]
    }
  ]
}
{% endschema %}

<div class="flipzy-split-section {{ section.settings.color_scheme }}">
  <div class="flipzy-split-container {% if section.settings.desktop_layout == 'media_left' %}layout-media-left{% endif %}">
    
    <div class="flipzy-split-text" style="{% if section.settings.mobile_text_first %}order: -1;{% endif %}">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}

      <div class="flipzy-feature-list">
        {% for block in section.blocks %}
          <div class="flipzy-feature-item" {{ block.shopify_attributes }}>
            <div class="flipzy-icon-box">
              {% case block.settings.icon %}
                {% when 'bulb' %}
                  <svg viewBox="0 0 24 24" fill="none"><path d="M9 18h6"/><path d="M10 22h4"/><path d="M12 2a7 7 0 0 0-7 7c0 2 0 3 2 4.5V15a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1.5c2-1.5 2-2.5 2-4.5a7 7 0 0 0-7-7z"/></svg>
                {% when 'puzzle' %}
                  <svg viewBox="0 0 24 24" fill="none"><path d="M19.439 15.424a1 1 0 0 0-1.025.99c0 .605.342 1.586.342 1.586.683 1.93-1.082 3.69-3.007 3s-1.442-2.502-3.483-2.502-2.31 1.767-2.31 1.767c-.66 2.05-3.05 1.536-3.71.696-.66-.84-.342-2.486-.342-2.486a1 1 0 0 0-1.025-.99 1 1 0 0 0-1.025.99c0 .605.342 2.652.342 2.652 1.346 3.86 6.22 4.545 7.562 2.652 1.342 1.893 6.216 1.208 7.562-2.652 0 0 .342-2.047.342-2.652a1 1 0 0 0-1.025-.99z"/><path d="M14.5 11a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z"/><path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4z"/></svg> {% when 'cycle' %}
                  <svg viewBox="0 0 24 24" fill="none"><path d="M21.5 2v6h-6"/><path d="M21.34 5.5A10 10 0 1 0 22 12"/></svg>
                {% when 'wrench' %}
                  <svg viewBox="0 0 24 24" fill="none"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
                {% when 'star' %}
                  <svg viewBox="0 0 24 24" fill="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                {% when 'check' %}
                  <svg viewBox="0 0 24 24" fill="none"><polyline points="20 6 9 17 4 12"/></svg>
              {% endcase %}
            </div>
            <div>{{ block.settings.text }}</div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="flipzy-split-media">
      <div class="flipzy-media-aspect">
        {% if section.settings.video_file != blank %}
          {{ section.settings.video_file | video_tag: 
            autoplay: true, loop: true, muted: true, playsinline: true, controls: false, 
            class: 'feature-video' 
          }}
        {% elsif section.settings.image_file != blank %}
          {{ section.settings.image_file | image_url: width: 1000 | image_tag: loading: 'lazy' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>

  </div>
</div>