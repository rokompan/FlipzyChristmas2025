{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* --- FLIPZY CONVERSION STYLES --- */
  
  /* 1. Gumb za nakup (Rumena + Glow) */
  .section-{{ section.id }}-padding .product-form__submit {
      background-color: #F4D35E; 
      color: #111827;
      border: none;
      border-radius: 50px;
      font-weight: 700;
      font-size: 1.2rem;
      text-transform: none;
      padding: 15px 30px;
      box-shadow: 0 10px 25px rgba(244, 211, 94, 0.4);
      position: relative;
      overflow: hidden;
      transition: transform 0.2s ease;
      margin-bottom: 10px;
      width: 100%;
  }
  
  .section-{{ section.id }}-padding .product-form__submit:hover {
      transform: scale(1.02);
  }

  /* Animacija utripanja */
  .section-{{ section.id }}-padding .product-form__submit::before {
      content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0;
      border-radius: 50px; box-shadow: 0 0 0 0 rgba(244, 211, 94, 0.7);
      animation: flipzy-pulse 2s infinite;
  }
  @keyframes flipzy-pulse {
      0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(244, 211, 94, 0.7); }
      70% { transform: scale(1); box-shadow: 0 0 0 15px rgba(244, 211, 94, 0); }
      100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(244, 211, 94, 0); }
  }

  /* 2. Trust Elements (Garancija + Ikone) */
  .flipzy-trust-wrapper {
      margin-top: 1.5rem;
      width: 100%;
  }

  .flipzy-guarantee-pill {
      background: #ECFDF5;
      border: 1px solid #6EE7B7;
      color: #065F46;
      padding: 12px 20px;
      border-radius: 12px;
      font-size: 0.9rem;
      font-weight: 600;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      margin-bottom: 1.5rem;
      width: 100%;
  }

  .flipzy-trust-footer {
      display: flex;
      justify-content: flex-start;
      gap: 25px;
      opacity: 0.7;
      flex-wrap: wrap;
      padding-top: 15px;
      border-top: 1px solid #e5e7eb;
  }
  
  .flipzy-trust-item {
      display: flex; flex-direction: column; align-items: center; gap: 5px;
      font-size: 0.75rem; font-weight: 500; color: #374151;
  }
  
  .flipzy-trust-icon { width: 20px; height: 20px; stroke: currentColor; fill: none; stroke-width: 2; }

  /* 3. Special Offer Badge (Centrirana in rumena) */
  .section-{{ section.id }}-padding .caption-with-letter-spacing {
      display: table; 
      margin: 0 auto 15px 0; /* Left align on desktop */
      background: #FEF3C7; 
      color: #D97706;      
      font-weight: 700;
      padding: 8px 16px;
      border-radius: 6px;
      font-size: 0.85rem;
      border: none;
      letter-spacing: 1px;
  }
  
  /* MOBILNI POPRAVKI: Centriranje */
  @media (max-width: 750px) {
      .section-{{ section.id }}-padding .product__info-container {
          text-align: center;
          align-items: center;
          display: flex;
          flex-direction: column;
      }
      .section-{{ section.id }}-padding .caption-with-letter-spacing {
          margin: 0 auto 15px auto; /* Center badge on mobile */
      }
      .flipzy-trust-footer {
          justify-content: center;
      }
      .product__title, .product__text, .price, .product__tax {
          text-align: center;
          width: 100%;
          justify-content: center;
      }
      .price { display: flex; justify-content: center; }
  }
{%- endstyle -%}

