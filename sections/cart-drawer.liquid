{%- render 'cart-drawer', 
  upsell_1_head: section.settings.upsell_1_head,
  upsell_1_sub: section.settings.upsell_1_sub,
  upsell_1_badge: section.settings.upsell_1_badge,
  upsell_2_head: section.settings.upsell_2_head,
  upsell_2_sub: section.settings.upsell_2_sub,
  upsell_2_badge: section.settings.upsell_2_badge,
  upsell_btn_base: section.settings.upsell_btn_base,
  upsell_upgrade_txt: section.settings.upsell_upgrade_txt
-%}

{% schema %}
{
  "name": "Cart Drawer",
  "settings": [
    {
      "type": "header",
      "content": "Upsell Settings (Translatable)"
    },
    { "type": "text", "id": "upsell_1_head", "label": "Upsell 1 Headline", "default": "⭐ Popular & Free Shipping" },
    { "type": "text", "id": "upsell_1_sub", "label": "Upsell 1 Subline", "default": "Add 1 more to unlock Free Shipping!" },
    { "type": "text", "id": "upsell_1_badge", "label": "Upsell 1 Badge", "default": "Popular" },
    { "type": "text", "id": "upsell_2_head", "label": "Upsell 2 Headline", "default": "⚡ Best Value & Free Shipping" },
    { "type": "text", "id": "upsell_2_sub", "label": "Upsell 2 Subline", "default": "Add 1 more to get 25% OFF!" },
    { "type": "text", "id": "upsell_2_badge", "label": "Upsell 2 Badge", "default": "Best Value" },
    { "type": "text", "id": "upsell_btn_base", "label": "Upsell Button Text", "default": "Add +1" },
    { "type": "text", "id": "upsell_upgrade_txt", "label": "Upgrade Label", "default": "Upgrade only" }
  ]
}
{% endschema %}
