{% schema %}
{
  "name": "Flipzy 8. Box Content",
  "class": "flipzy-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Style"
    },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#F6DACE" },
    { "type": "text", "id": "main_heading", "label": "Main Heading", "default": "What's in the Box?" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "The box contains everything you need for smooth routines from day one. Premium materials ensure Flipzy lasts throughout childhood." },
    
    {
      "type": "header",
      "content": "Left Side (Images)"
    },
    { "type": "image_picker", "id": "image_1", "label": "Main Image (Contents)" },
    { "type": "image_picker", "id": "image_2", "label": "Secondary Image (Dimensions)" },
    { "type": "color", "id": "image_2_bg", "label": "Secondary Image Background", "default": "#EADBC8", "info": "Background color for the dimensions card." },

    {
      "type": "header",
      "content": "Right Side (Content)"
    },
    { "type": "text", "id": "card_title", "label": "Card Title", "default": "Everything you need to start your journey to smoother routines" },
    { "type": "text", "id": "price_old", "label": "Old Price", "default": "€49,00" },
    { "type": "text", "id": "price_new", "label": "New Price", "default": "€29,00" },
    
    {
      "type": "header",
      "content": "Trust Box Texts"
    },
    { "type": "text", "id": "trust_1", "label": "Trust Item 1", "default": "Free shipping" },
    { "type": "text", "id": "trust_2", "label": "Trust Item 2", "default": "Taxes included" },
    { "type": "text", "id": "trust_3", "label": "Trust Item 3", "default": "Ships in 24h" },
    { "type": "text", "id": "trust_4", "label": "Trust Item 4", "default": "30-day money-back guarantee" },
    { "type": "text", "id": "trust_5", "label": "Trust Item 5", "default": "24 months warranty" },

    { "type": "textarea", "id": "description", "label": "Description Text", "default": "Take advantage of the special price and give your family calmer days at a great value. Get the complete Flipzy system at the lowest price of the season." },
    { "type": "text", "id": "btn_text", "label": "Button Text", "default": "Go to Shop" },
    { "type": "url", "id": "btn_link", "label": "Button Link" }
  ],
  "blocks": [
    {
      "type": "list_item",
      "name": "Checklist Item",
      "settings": [
        { 
          "type": "select", 
          "id": "icon", 
          "label": "Icon", 
          "options": [ 
            { "value": "check", "label": "Checkmark (Green)" },
            { "value": "check_circle", "label": "Check Circle" },
            { "value": "sun", "label": "Sun" },
            { "value": "moon", "label": "Moon" },
            { "value": "star", "label": "Star" },
            { "value": "settings", "label": "Settings/Gear" },
            { "value": "puzzle", "label": "Puzzle" }
          ], 
          "default": "check_circle" 
        },
        { "type": "text", "id": "text", "label": "Text", "default": "Item description" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flipzy 8. Box Content",
      "blocks": [
        { "type": "list_item", "settings": { "icon": "check_circle", "text": "1x Wooden Wall Board" } },
        { "type": "list_item", "settings": { "icon": "check_circle", "text": "7x Task Pieces" } },
        { "type": "list_item", "settings": { "icon": "check_circle", "text": "30 Customization Stickers" } },
        { "type": "list_item", "settings": { "icon": "check_circle", "text": "Sun and moon for morning and evening routines" } },
        { "type": "list_item", "settings": { "icon": "check_circle", "text": "Mounting Kit + Instructions" } },
        { "type": "list_item", "settings": { "icon": "check_circle", "text": "Easy Setup Guide" } }
      ]
    }
  ]
}
{% endschema %}

<div class="flipzy-box-section" style="background-color: {{ section.settings.bg_color }};">
  
  <div class="flipzy-box-header">
    <h2 class="flipzy-box-title">{{ section.settings.main_heading }}</h2>
    <p class="flipzy-box-subtitle">{{ section.settings.subheading }}</p>
  </div>

  <div class="flipzy-box-grid">
    
    <div class="flipzy-box-media-col">
      <div class="flipzy-box-img-card">
        {% if section.settings.image_1 != blank %}
          <img src="{{ section.settings.image_1 | image_url: width: 1000 }}" loading="lazy" alt="Box Contents">
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>

      {% if section.settings.image_2 != blank %}
      <div class="flipzy-box-img-card dimensions-card" style="background-color: {{ section.settings.image_2_bg }};">
        <img src="{{ section.settings.image_2 | image_url: width: 1000 }}" loading="lazy" alt="Dimensions">
      </div>
      {% endif %}
    </div>

    <div class="flipzy-box-content-card">
      <h3 class="flipzy-box-content-title">{{ section.settings.card_title }}</h3>

      <ul class="flipzy-box-list">
        {% for block in section.blocks %}
          <li class="flipzy-box-item">
            <div class="flipzy-box-icon">
              {% case block.settings.icon %}
                {% when 'check' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {% when 'check_circle' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                {% when 'sun' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
                {% when 'moon' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
                {% when 'star' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                {% when 'settings' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg>
                {% when 'puzzle' %}<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.5 6c-2.61.7-2.61 3.3 0 4c1.93.5 1.68 3-1.21 3.5a8 8 0 1 0-9.29 9.29c.5-2.89 3-2.64 3.5-1.21.7 2.61 3.3 2.61 4 0 1.78-.66 1.78-3.34 0-4-2.61-.7-2.61-3.3 0-4 1.78-.66 1.78-3.34 0-4-.7-2.61-3.3-2.61-4 0z"></path></svg>
              {% endcase %}
            </div>
            <span>{{ block.settings.text }}</span>
          </li>
        {% endfor %}
      </ul>

      <div class="flipzy-box-price">
        <s>{{ section.settings.price_old }}</s>
        <span>{{ section.settings.price_new }}</span>
      </div>

      <div class="flipzy-box-trust">
        <div class="flipzy-box-trust-row">
          {% if section.settings.trust_1 != blank %}
          <div class="flipzy-trust-mini">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
            {{ section.settings.trust_1 }}
          </div>
          {% endif %}
          
          {% if section.settings.trust_2 != blank %}
          <div class="flipzy-trust-mini">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
            {{ section.settings.trust_2 }}
          </div>
          {% endif %}
          
          {% if section.settings.trust_3 != blank %}
          <div class="flipzy-trust-mini">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
            {{ section.settings.trust_3 }}
          </div>
          {% endif %}
        </div>
        
        <div class="flipzy-box-trust-row" style="margin-top:10px;">
          {% if section.settings.trust_4 != blank %}
          <div class="flipzy-trust-mini">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
            {{ section.settings.trust_4 }}
          </div>
          {% endif %}
          
          {% if section.settings.trust_5 != blank %}
          <div class="flipzy-trust-mini">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
            {{ section.settings.trust_5 }}
          </div>
          {% endif %}
        </div>
      </div>

      <div class="flipzy-box-desc">
        {{ section.settings.description }}
      </div>

      <a href="{{ section.settings.btn_link }}" class="flipzy-btn" style="width:100%; display:block; text-align:center;">
        {{ section.settings.btn_text }}
      </a>

    </div>
  </div>
</div>